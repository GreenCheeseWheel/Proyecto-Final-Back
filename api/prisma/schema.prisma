// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  celular  String?   @default("0000000000")
  name     String
  address  String?
  password String?
  google   Boolean
  rol      Role      @default(USER)
  active   Boolean   @default(true)
  ratings  Rating[]
  sales    Sale[]
  comments Comment[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  image       String
  brand       String?
  category    String
  description String
  price       Decimal
  stock       Int       @default(1)
  active      Boolean   @default(true)
  categoryrel Category  @relation(fields: [category], references: [name])
  ratings     Rating[]
  comments    Comment[]
}

model Detail {
  id        Int     @id @default(autoincrement())
  idsale    Int
  total     Decimal
  sale      Sale    @relation(fields: [idsale], references: [id])
  products  Json[] 
}


model Sale {
  id        Int      @id @default(autoincrement())
  iduser    Int
  createdAt DateTime @default(now())
  details   Detail[]
  user      User     @relation(fields: [iduser], references: [id])
}

model Category {
  id       Int       @default(autoincrement())
  name     String    @id
  active   Boolean
  products Product[]
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  productId Int
  userId    Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Rating {
  id Int @id @default(autoincrement())
  rating Float
  userId Int
  productId Int
  product Product @relation(fields: [productId], references: [id])
  user User @relation(fields: [userId], references: [id])
}
